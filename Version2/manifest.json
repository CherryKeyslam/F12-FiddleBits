{

  "manifest_version": 2,
  "name": "F12 Fiddlebits",
  "version": "2.0",

  "description": "Things to help make fiddling with dev tools easier!",

  "permissions": ["contextMenus","clipboardWrite"],

  "background": 
    {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["*://*/*","file:///*"],
        "js": ["content.js"]
      }
    ]
  

}
